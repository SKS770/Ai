1) Python program that demonstrates the hill climbing algorithm to find the 
maximum of a mathematical function.(For example f(x) = -x^2 + 4x) 


import random
def f(x):
    return -x**2 + 4*x
def hill_climb():
    current_x = random.uniform(0, 5)  # random starting point
    step_size = 0.1
    max_iterations = 100
    for i in range(max_iterations):
        new_x = current_x + random.uniform(-step_size, step_size)
        if f(new_x) > f(current_x):
            current_x = new_x
    print(f"Maximum value of f(x) ≈ {f(current_x):.4f} at x ≈ {current_x:.4f}")
hill_climb()



2) eight_puzzle_bfs.py


from collections import deque
def is_solvable(state):
    arr = [x for x in state if x!=0]
    inv = sum(1 for i in range(len(arr)) for j in range(i+1,len(arr)) if arr[i]>arr[j])
    return inv%2==0
def bfs(start):
    if not is_solvable(start):
        return None
    q = deque([start])
    parent = {start: None}
    while q:
        s = q.popleft()
        if s == GOAL:
            path = []
            while s:
                path.append(s)
                s = parent[s]
            return path[::-1]
        for n in neighbors(s):
            if n not in parent:
                parent[n] = s
                q.append(n)
    return None
if _name_ == "_main_":
    start = (1,2,3,4,0,6,7,5,8)
    p = bfs(start)
    if p:
        print("BFS solution length:", len(p)-1)
    else:
        print("No BFS solution (or unsolvable).")
